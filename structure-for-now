├── cmd
│   └── imagestore
│       └── main.go               # Entry point of the application (similar to Application.java)
├── pkg
│   ├── common
│   │   ├── dto
│   │   │   ├── base_dto.go        # Base DTOs (similar to BaseDTO.java)
│   │   │   ├── image_dto.go       # Image DTO (ImageDTO.java)
│   │   │   ├── label_dto.go       # Label DTO (LabelDTO.java)
│   │   └── entities
│   │       ├── entity_base.go     # Base entity (EntityBase.java)
│   ├── config
│   │   ├── aws_env.go             # AWS environment config (AwsEnv.java)
│   │   ├── global_env.go          # Global environment config (GlobalEnv.java)
│   │   └── postgres_env.go        # Postgres environment config (PostgresEnv.java)
│   ├── services
│   │   ├── user_service.go        # User service (UserService.java)
│   ├── storage
│   │   ├── image_store.go         # Image store (ImageStore.java)
│   │   ├── user_store.go          # User store (UserStore.java)
│   │   ├── s3_filesystem.go       # S3 file system (S3FileSystem.java)
│   │   ├── exceptions
│   │   │   ├── storage_errors.go  # Custom storage exceptions
│   └── transport
│       ├── controllers
│       │   ├── base_controller.go # Base controller (BaseController.java)
│       │   └── user_controller.go # User controller (UserController.java)
│       ├── auth
│       │   └── auth_middleware.go # Authentication handling
├── internal
│   └── db
│       ├── postgres_handler.go    # Postgres connection handler (ConnectionHandler.java)
│       └── postgres_repo.go       # Database repository logic
└── go.mod                          # Go module file (go.mod)
